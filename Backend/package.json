{
  "name": "shipped-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "bun --bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "lint": "bunx @biomejs/biome lint ./src",
    "format": "bunx @biomejs/biome check --write ./src",
    "test": "bun test ./test/index.test.ts ./test/keys.test.ts",
    "test:full": "bun test ./test/*.test.ts",
    "db:push": "bunx drizzle-kit push",
    "db:migrate": "bunx drizzle-kit migrate",
    "build": "bash patchBuild.sh && bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.ts"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.1.2",
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/cron": "^1.1.1",
    "@elysiajs/server-timing": "^1.1.0",
    "@elysiajs/swagger": "^1.1.5",
    "@libsql/client": "^0.14.0",
    "docker-compose": "^1.1.0",
    "drizzle-orm": "^0.36.4",
    "drizzle-typebox": "^0.1.1",
    "elysia": "latest",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@types/bun": "^1.1.11",
    "bun-types": "latest",
    "drizzle-kit": "^0.28.1"
  },
  "module": "src/index.js"
}